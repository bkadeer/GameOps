# Database Configuration
DATABASE_URL=postgresql+asyncpg://evms_user:your_password_here@localhost:5432/evms
POSTGRES_DB=evms
POSTGRES_USER=evms_user
POSTGRES_PASSWORD=your_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://admin.venue.local,https://venue.local

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=90

# Session Monitor
SESSION_CHECK_INTERVAL=10
SESSION_WARNING_MINUTES=5
SESSION_FINAL_WARNING_MINUTES=1

# Smart Plug Integration (comma-separated IPs)
SHELLY_DEVICES=192.168.50.10,192.168.50.11,192.168.50.12

# Router Integration (Mikrotik)
MIKROTIK_HOST=192.168.10.1
MIKROTIK_USER=api_user
MIKROTIK_PASSWORD=your_router_password

# Payment Gateway (Optional - Stripe)
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring
GRAFANA_PASSWORD=your_grafana_password

# Application
DEBUG=false
APP_NAME=EVMS
APP_VERSION=1.0.0
